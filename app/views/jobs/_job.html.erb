<%unless job.expired? %>
  <div class="col-md-4 col-sm-12 col-xs-12">
    <div class="job" id="<%="job_#{job.id}" %>">
      <h2><%=link_to job.title, job%></h2>
      <p><%=job.company.name%></p>
      <p><%=job.category.name%></p>
      <p><%=job.location%></p>
      <%if job.featured? %>
        <strong>Destaque</strong>
      <%end%>
      <%if job.new? %>
        <strong>NOVA!</strong>
      <%end%>
      <%if current_user && current_user.owner?(job)%>
        <p><%=link_to 'Editar', job%></p>
      <%end%>
    </div>
  </div>
<%end%>
