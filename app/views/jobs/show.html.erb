<h1><%=@job.title%></h1>
<%if @job.expired? %>
  <div class="alert alert-danger">Vaga expirada</div>
<%end%>
<dl class="dl-horizontal">
  <dt>Tipo de Contratação</dt><dd><%=@job.hiring_type%></dd>

  <dt>Categoria</dt><dd><%=@job.category.name%></dd>

  <dt>Empresa</dt><dd><%=@job.company.name%></dd>

  <dt>Descrição</dt><dd><%=@job.description%></dd>

  <dt>Local</dt><dd><%=@job.location%></dd>

  <dd>
    <%if @job.featured? %>
      <strong>Destaque</strong>
    <%end%>
  </dd>
</dl>
<%if current_user && current_user.owner?(@job) %>
  <p><%=link_to 'Editar', edit_job_path(@job)%></p>
<%end%>
<%= link_to "Voltar", root_path %>
