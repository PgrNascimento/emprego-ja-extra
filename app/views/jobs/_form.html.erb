<%= simple_form_for @job do |f| %>
  <%=f.input :title%>
  <%=f.input :location%>
  <%=f.input :hiring_type, collection: ['CLT', 'PJ', 'Freelance'] %>
  <%=f.association :category%>
  <%=f.association :company, collection: @companies%>
  <%=f.input :description, as: :text%>
  <%=f.input :featured, as: :boolean%>
  <%=f.button :submit, name_button, class: "btn-lg btn-primary" %>
  <%=link_to "Voltar", root_path, class: "btn btn-default" %>
<%end%>
